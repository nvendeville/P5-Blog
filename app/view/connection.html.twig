{% extends "base.html.twig" %}

{% block body %}
<section class="newsletter divider">
    <div class="modal fade" id="SignInModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-gray" id="exampleModalCenterTitle">Connectez-vous</h5>
                    <button type="rest" class="close" id="resetSignIn" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-gray">
                    <form id="signInForm" action="/P5-Blog/" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="token" value="{{ token }}">
                        <input type="hidden" name="type" value="sign-in">
                        <label for="email" class="text-orange">
                            Votre email :
                        </label>
                        <input class="select-width-100" type="text" name="email" id="email">
                        <label for="password" class="text-orange">
                            Votre mot de passe :
                        </label>
                        <input class="select-width-100" type="password" name="password" id="password">
                        <div class="margin-100 margin-30 width-100 flex-center space-evenly">
                            <button type="submit" class="submit">Se connecter</button>
                        </div>
                        <div class="space-evenly margin-30">
                            <a data-toggle="modal" data-target="#ForgotPasswordModal" role="button" data-dismiss="modal" aria-expanded="false" aria-controls="ForgotPasswordModal">Mot de passe oublié</a>
                            <a data-toggle="modal" data-target="#AddUserModal" role="button" data-dismiss="modal" aria-expanded="false" aria-controls="AddUserModal">Créer un compte</a>
                        </div>
                        <div class="modal-footer">
                            <button type="reset" class="btn btn-primary" id="resetSignIn" data-dismiss="modal">Fermer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="ForgotPasswordModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-gray" id="exampleModalCenterTitle">Mot de passe oublié</h5>
                    <button type="rest" class="close" id="resetForgotPassword" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-gray">
                    <form id="ForgotPasswordForm" action="/P5-Blog/" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="token" value="{{ token }}">
                        <input type="hidden" name="type" value="forgot-password">
                        <label for="email" class="text-orange">
                            Votre email :
                        </label>
                        <input class="select-width-100" type="text" name="email" id="email">
                        <div class="margin-100 margin-30 width-100 flex-center space-evenly">
                            <button type="submit" class="submit">Envoyer</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    {% if resetPassword %}
    <div class="modal fade" id="resetPasswordModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-gray" id="exampleModalCenterTitle">Mot de passe oublié</h5>
                    <button type="rest" class="close" id="restPasswordForm" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-gray">
                    <form id="restPasswordForm" action="/P5-Blog/" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="token" value="{{ token }}">
                        <input type="hidden" name="type" value="reset-password">
                        <input type="hidden" name="email" value="{{ email }}">

                        <label for="newPassword" class="text-orange">
                        Nouveau mot de passe :
                    </label>
                    <input class="select-width-100" type="password" name="newPassword" id="newPassword">
                        <label for="password" class="text-orange">
                            Confirmez le nouveau mot de passe :
                        </label>
                        <input class="select-width-100" type="password" name="confirmedNewPassword" id="confirmedNewPassword">
                    <div class="margin-100 margin-30 width-100 flex-center space-evenly">
                        <button type="submit" class="submit">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {% endif %}
    <div class="modal fade collapse text-small" id="AddUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-gray" id="exampleModalCenterTitle2">Créez un compte</h5>
                    <button type="rest" class="close" id="resetSignUp" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-gray">
                    <form id="AddUserForm" class="select-width-100" action="/P5-Blog/" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="token" value="{{ token }}">
                        <input type="hidden" name="type" value="add_user">
                        <input type="hidden" name="isAdmin" value="0">
                        <div class="form-holder">
                            <div class="form-group container">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label for="firstname" class="text-orange">
                                            Votre prénom :
                                        </label>
                                        <input class="select-width-100" type="text" name="firstname" id="firstname">
                                    </div>
                                    <div class="col-sm-6">
                                        <label for="lastname" class="text-orange">
                                            Votre nom :
                                        </label>
                                        <input class="select-width-100" type="text" name="lastname" id="lastname">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label for="avatar" class="text-orange">
                                            Votre avatar :
                                        </label>
                                        <input class="select-width-100 height-60" type="file" name="avatar" id="avatar">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label for="email" class="text-orange">
                                            Votre email :
                                        </label>
                                        <input class="select-width-100" type="email" name="email" id="email">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label for="password" class="text-orange">
                                            Votre mot de passe :
                                        </label>
                                        <input class="select-width-100" type="password" name="password" id="password">
                                    </div>
                                    <div class="col-sm-6">
                                        <label for="passwordConfirmed" class="text-orange">
                                            Confirmez votre mot de passe
                                        </label>
                                        <input class="select-width-100" type="password" name="passwordConfirmed" id="passwordConfirmed">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="margin-100 width-100 flex-center space-evenly col-sm-12">
                                        <button type="submit" class="submit">S'inscrire</button>
                                        <button type="reset" class="submit" id="resetSignUp">Annuler</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-primary" id="resetSignUp" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>

    {% if userExist %}
        <div class="modal fade" id="alreadyKnown" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-gray" id="exampleModalCenterTitle">Utilisateur déjà enregistré</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body text-gray">
                        <p>Un utilisateur existe déjà avec les informations saisies</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

        {% if noUserExist %}
            <div class="modal fade" id="noUserExistModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-gray">Utilisateur inconnu</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body text-gray">
                            <p>Aucun utilisateur n'a été trouvé avec les informations saisies</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
</section>
{% endblock %}


{% block script %}
    <script>
        $(document).ready(function(){

            if ($('#alreadyKnown').length) {
                $('#alreadyKnown').modal('show')
            } else if ($('#resetPasswordModal').length) {
                $('#resetPasswordModal').modal('show')
            } else if ($('#noUserExistModal').length) {
                $('#noUserExistModal').modal('show')
            }
            else {
                $('#SignInModal').modal('show')
            }

            $("#resetSignUp").click(function() {
                window.history.back()
            });

            $("#resetSignIn").click(function() {
                window.history.back()
            });
        });
    </script>
{% endblock %}