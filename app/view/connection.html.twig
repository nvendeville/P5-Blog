{% extends "baseAdmin.html.twig" %}

{% block body %}

    <section class="divider newsletter">
        <h1 class="center text-orange">Connectez-vous</h1>
        <form class="select-width-100" action="/P5-Blog" method="post" enctype="multipart/form-data">
            <div class="form-holder margin-100">
                <div class="form-group">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="text-gray">Créer un compte</h4>
                                <h6 class="text-orange">
                                    Votre prénom :
                                </h6>
                                <input class="select-width-100" type="text" name="firstname" id="firstname">
                                <h6 class="text-orange">
                                    Votre nom :
                                </h6>
                                <input class="select-width-100" type="text" name="lastname" id="lastname">
                                <h6 class="text-orange">
                                    Votre avatar :
                                </h6>
                                <input class="select-width-100 height-60" type="file" name="avatar" id="avatar"/>
                                <h6 class="text-orange">
                                    Votre email :
                                </h6>
                                <input class="select-width-100" type="email" name="email" id="email"/>
                                <h6 class="text-orange">
                                    Votre identifiant :
                                </h6>
                                <input class="select-width-100" type="text" name="username" id="username"/>
                                <h6 class="text-orange">
                                    Votre mot de passe :
                                </h6>
                                <input class="select-width-100" type="text" name="password" id="password"/>
                                <h6 class="text-orange">
                                    Confirmez votre mot de passe :
                                </h6>
                                <input class="select-width-100" type="text" name="passwordConfirmed" id="passwordConfirmed"/>
                                <div class="width-100 flex-center">
                                    <button type="submit" class="submit">S'inscrire</button>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h4 class="text-gray">Déjà inscrit</h4>
                                <h6 class="text-orange">
                                    Votre identifiant :
                                </h6>
                                <input class="select-width-100" type="text" name="username" id="username"/>
                                <h6 class="text-orange">
                                    Votre mot de passe :
                                </h6>
                                <input class="select-width-100" type="password" name="password" id="password"/>
                                <div class="width-100 flex-center">
                                    <button type="submit" class="submit">Se connecter</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>


    </section>

{% endblock %}
