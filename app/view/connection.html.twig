<section class="modal fade newsletter divider" id="SignInModal" tabindex="-1" role="dialog"
         aria-labelledby="exampleModalCenterTitle" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="modalTitle" id="exampleModalCenterTitle">Connectez-vous</p>
                <button type="reset" class="close" id="resetSignInTimes" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-gray">
                <form id="signInForm" action="/P5-Blog/users/login" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="token" value="{{ token }}">
                    <input type="hidden" name="type" value="sign-in">
                    <input type="hidden" name="redirect" value="">
                    <label for="email" class="text-orange">
                        Votre email :
                    </label>
                    <input class="select-width-100" type="text" name="email" id="email" required>
                    <label for="password" class="text-orange">
                        Votre mot de passe :
                    </label>
                    <input class="select-width-100" type="password" name="password" id="password" required>
                    <div class="margin-100 margin-30 width-100 flex-center space-evenly">
                        <button type="submit" class="submit">Se connecter</button>
                    </div>
                    <div class="space-evenly margin-30">
                        <a data-toggle="modal" data-target="#ForgotPasswordModal" role="button" data-dismiss="modal"
                           aria-expanded="false" aria-controls="ForgotPasswordModal">Mot de passe oublié</a>
                        <a data-toggle="modal" data-target="#AddUserModal" role="button" data-dismiss="modal"
                           aria-expanded="false" aria-controls="AddUserModal">Créer un compte</a>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-primary" id="resetSignInBtn" data-dismiss="modal"
                                aria-label="Close">Annuler
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

