{% extends "base.html.twig" %}

{% block body %}

<!-- Hero Section-->
<section style="background: url(img/{{ home.hero_img }}); background-size: cover; background-position: center center;" class="hero" >
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <h1 class="text-orange">{{ home.hero_firstname }} {{ home.hero_lastname }}</h1><a href="#" class="hero-link text-orange">{{ home.hero_link }}</a>
            </div>
        </div>
    </div>
</section>

<!-- Intro Section-->
<section class="intro">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2 class="h3">{{ home.section_title }}</h2>
                <p class="text-big">{{ home.section_content }}</p>
            </div>
            <div class="col-lg-4">
                <h2 class="h3">Téléchargez mon CV !</h2>
                <a href="img/CV.jpg"><img src="img/{{ home.cv_img }}" alt="..." class="img-fluid"></a>
            </div>
        </div>
    </div>
</section>

<!-- Gallery Section-->
<section class="gallery no-padding">
    <div class="row">
        <div class="mix col-lg-3 col-md-3 col-sm-6">
            <div class="item"><img src="img/{{ home.gallery_img1 }}" alt="..." class="img-fluid"></div>
        </div>
        <div class="mix col-lg-3 col-md-3 col-sm-6">
            <div class="item"><img src="img/{{ home.gallery_img2 }}" alt="..." class="img-fluid"></div>
        </div>
        <div class="mix col-lg-3 col-md-3 col-sm-6">
            <div class="item"><img src="img/{{ home.gallery_img3 }}" alt="..." class="img-fluid"></div>
        </div>
        <div class="mix col-lg-3 col-md-3 col-sm-6">
            <div class="item"><img src="img/{{ home.gallery_img4 }}" alt="..." class="img-fluid"></div>
        </div>
    </div>
</section>

<!-- Divider Section-->
<section style="background: url(img/{{ home.divider_img }}); background-size: cover; background-position: center bottom" class="divider newsletter">
    <div class="container">
        <div class="row flex-center">
            <div class="col-md-7">
                <h2>Contactez-moi</h2>
                <div class="form-holder">
                    <form action="FormController.php" method="post">
                        <div class="form-group">
                            <input type="text" name="firstname" id="firstname" placeholder="Entrez votre prénom">
                            <input type="text" name="lastname" id="lastname" placeholder="Entrez votre nom">
                            <input type="email" name="email" id="email" placeholder="Entrez votre adresse mail">
                            <textarea class="textarea" name="message" id="message" placeholder="Entrez votre message"></textarea>
                        </div>
                        <button type="submit" class="submit">Envoyer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


{% endblock %}
