{% extends "base.html.twig" %}

{% block body %}

    <section
            style="background: url(img/{{ home.heroImg }}); background-size: cover; background-position: center center;"
            class="hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <h1 class="text-orange">{{ home.heroFirstname }} {{ home.heroLastname }}</h1>
                    <a href="#" class="hero-link text-orange">{{ home.heroLink }}</a>
                </div>
            </div>
        </div>
    </section>

    <section class="intro">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h2 class="h3">{{ home.sectionTitle }}</h2>
                    <p class="text-big">{{ home.sectionContent }}</p>
                </div>
                <div class="col-lg-4">
                    <h2 class="h3"><a href="img/CV.jpg" download >Téléchargez mon CV !</a></h2>
                    <a href="img/CV.jpg" download ><img src="img/{{ home.cvImg }}" alt="CV" class="container-fluid"></a>
                </div>
            </div>
        </div>
    </section>

    <div class="gallery no-padding">
        <div class="row">
            <div class="mix col-lg-3 col-md-3 col-sm-6">
                <div class="item"><img src="img/{{ home.galleryImg1 }}" alt="Compétence 1" class="img-fluid"></div>
            </div>
            <div class="mix col-lg-3 col-md-3 col-sm-6">
                <div class="item"><img src="img/{{ home.galleryImg2 }}" alt="Compétence 2" class="img-fluid"></div>
            </div>
            <div class="mix col-lg-3 col-md-3 col-sm-6">
                <div class="item"><img src="img/{{ home.galleryImg3 }}" alt="Compétence 3" class="img-fluid"></div>
            </div>
            <div class="mix col-lg-3 col-md-3 col-sm-6">
                <div class="item"><img src="img/{{ home.galleryImg4 }}" alt="Compétence 4" class="img-fluid"></div>
            </div>
        </div>
    </div>

    <section
            style="background: url(img/{{ home.dividerImg }}); background-size: cover; background-position: center bottom"
            class="divider newsletter">
        <div class="container">
            <div class="row flex-center">
                <div class="col-md-7">
                    <h2>Contactez-moi</h2>
                    <div class="form-holder">
                        <form id="contactForm" class="select-width-100" action="/P5-Blog/home" method="post">
                            <input type="hidden" name="token" value="{{ token }}">
                            <input type="hidden" name="type" value="contact_form">
                            <div class="form-group">
                                <input class="text-bold" type="text" name="firstname" id="firstname2" placeholder="Entrez votre prénom *" required>
                                <input class="text-bold" type="text" name="lastname" id="lastname2" placeholder="Entrez votre nom *" required>
                                <input class="text-bold" type="email" name="email" id="email4" placeholder="Entrez votre adresse mail *" required>
                                <textarea class="textarea text-bold" name="message" id="message"
                                          placeholder="Entrez votre message *"></textarea>
                            </div>
                            <div>
                                <p class="text-white">* Tous les champs sont obligatoires</p>
                            </div>
                            <button type="submit" class="submit">Envoyer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% if mailSent %}
        <div class="modal fade" id="sentMailContact" tabindex="-1" role="dialog" aria-hidden="true"
             data-backdrop="static">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content padding-modal center">
                    <div class="modal-body text-gray">
                        <p>Votre message a bien été envoyé.</p>
                        <p>Je vous réponds au plus vite.</p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" id="resetwaitingValidation" data-dismiss="modal">Ok</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}



{% endblock %}

{% block script %}

    <script>
        $(document).ready(function () {
            if ($('#sentMailContact')) {
                $('#sentMailContact').modal('show')
            }
        });
    </script>

{% endblock %}