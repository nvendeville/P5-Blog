<script>
    $(document).ready(function () {


        $('#navbarcollapse a').removeClass('active')


        let uri = window.location.pathname
        if (uri.includes('admin')) {
            $('#adminDropdown').addClass('active')
            if (uri.includes('listPost')) {
                $('#listPost').addClass('active')
            } else if (uri.includes('listComment')) {
                $('#listComment').addClass('active')
            } else {
                $('#updateHome').addClass('active')
            }
        } else if(uri.includes('posts')) {
            $("#postsLink").addClass('active')
        } else {
            $('#homeLink').addClass('active')
        }

        $('#signInForm input[name="redirect"]').attr('value', document.URL)
        $('#ForgotPasswordForm input[name="redirect"]').attr('value', document.URL)
        $('#restPasswordForm input[name="redirect"]').attr('value', document.URL)
        $('#AddUserForm input[name="redirect"]').attr('value', document.URL)

        if ($('#alreadyKnown').length) {
            $('#alreadyKnown').modal('show')
        } else if ($('#resetPasswordModal').length) {
            $('#resetPasswordModal').modal('show')
        } else if ($('#noUserExistModal').length) {
            $('#noUserExistModal').modal('show')
        } else if ($('#wrongPasswordModal').length) {
            $('#wrongPasswordModal').modal('show')
        }
    });

</script>

