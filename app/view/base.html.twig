<script>
    $(document).ready(function () {

        let queryParams = new URLSearchParams(window.location.search)

        $('#navbarcollapse a').removeClass('active')

        if (queryParams.has('p')) {
            if (queryParams.get('p').includes('admin')) {
                $('#adminDropdown').addClass('active')
            }
            let links = $('#navbarcollapse a')
            for (let link of links) {
                let linkParams = new URLSearchParams($(link).attr('href'))
                if (linkParams.has('p') && queryParams.get('p') === linkParams.get('p')) {
                    $(link).addClass('active')
                }
            }
        } else {
            $('#homeLink').addClass('active')
        }

        $('#signInForm input[name="redirect"]').attr('value', document.URL)
        $('#ForgotPasswordForm').attr('action', document.URL)
        $('#restPasswordForm').attr('action', document.URL)
        $('#AddUserForm').attr('action', document.URL)

        if ($('#alreadyKnown').length) {
            $('#alreadyKnown').modal('show')
        } else if ($('#resetPasswordModal').length) {
            $('#resetPasswordModal').modal('show')
        } else if ($('#noUserExistModal').length) {
            $('#noUserExistModal').modal('show')
        } else if ($('#wrongPasswordModal').length) {
            $('#wrongPasswordModal').modal('show')
        }
    });

</script>

